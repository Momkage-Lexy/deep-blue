@page
@model LogoutModel
@{
    ViewData["Title"] = "Checkmate – You're Signed Out";
}

<div class="checkmate-container">
    <div class="checkmate-icon">♛</div>
    <div class="checkmate-heading">Checkmate!</div>
    <p class="checkmate-subtext">Your session has ended. Like a masterful game, every move counts.</p>
    <div id="countdownMessage" class="text-muted mb-4">
        Redirecting to the home board in <span id="countdown">5</span> seconds...
    </div>

    <a href="/" class="btn btn-global">Back to Home</a>
    <a href="/Identity/Account/Login" class="btn btn-global">Log in Again</a>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        let seconds = 5;
        const countdownElement = document.getElementById('countdown');

        const countdownInterval = setInterval(function () {
            seconds--;
            countdownElement.textContent = seconds;

            if (seconds <= 0) {
                clearInterval(countdownInterval);
                window.location.href = '/';
            }
        }, 1000);
    });
</script>
